%section.sign_in.container
  .row
    .col-sm-10.col-sm-offset-1
      .sign_in
        %fieldset
          = bootstrap_form_tag url: '/sign_in' do |f|
            = f.email_field :email
            = f.password_field :password, label: "Password"
            = f.submit "Sign in"
            = link_to "Forgot your password?", forgot_password_path
